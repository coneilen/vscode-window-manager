{
  "name": "vscode-window-manager",
  "version": "1.0.0",
  "description": "A small desktop utility that lists open VS Code windows and lets you switch between them",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.colinneilens.vscode-window-manager",
    "productName": "VS Code Window Manager",
    "publish": {
      "provider": "github",
      "owner": "coneilen",
      "repo": "vscode-window-manager"
    },
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": "nsis"
    }
  }
}
